# Firefox Forensics Tool - Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# GENERAL SETTINGS
# ============================================================================

# Default output directory for forensic reports
# Leave empty to use ~/Downloads/firefox_forensics_output
OUTPUT_DIR=

# Default output format: html, csv, md, or all
OUTPUT_FORMAT=all

# Enable verbose logging (true/false)
VERBOSE=false

# ============================================================================
# FIREFOX PROFILE SETTINGS
# ============================================================================

# Default Firefox profile path (auto-detect if empty)
# Example: ~/.mozilla/firefox/abc123.default-release
FIREFOX_PROFILE=

# Skip profile selection prompt and use default profile
USE_DEFAULT_PROFILE=false

# ============================================================================
# PASSWORD DECRYPTION SETTINGS
# ============================================================================

# Enable password decryption (true/false)
# Set to false to skip password decryption entirely
ENABLE_PASSWORD_DECRYPT=true

# Master password for Firefox (if set)
# WARNING: Storing passwords in plaintext is not recommended!
# Leave empty to prompt interactively
MASTER_PASSWORD=

# ============================================================================
# NSS LIBRARY SETTINGS
# ============================================================================

# Custom path to libnss3.so (leave empty for auto-detection)
# Example: /usr/lib/libnss3.so
NSS_LIBRARY_PATH=

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Non-interactive mode (skip all prompts)
NON_INTERACTIVE=false

# Quiet mode (suppress non-critical output)
QUIET=false
